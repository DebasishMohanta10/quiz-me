<% provide(:title,"Contact") %>
<h3 class="blue-text center" style="font-weight:600;">Contact Us</h3>

<p class="center" style="font-size:18px">We welcome your feedback.Please submit the form below to let us know what you think or alert us to any problems you are having with QuizMe.</p>

<h4 class="blue-text center" style="font-weight:500">Feedback</h4>

<!-- Feedback form will go here -->
<div class="section" style="width:90%; margin:0 auto;">
  <%= form_with url: leave_feedback_path,local: true,method: :post do %>
    <div>
      <%= label_tag "name" %>
      <%= text_field_tag "name",feedback.fetch(:name,nil) %>
    </div>
    <div>
      <%= label_tag "email" %>
      <%= email_field_tag "email",feedback.fetch(:email,nil) %>
    </div>
    <div>
      <span>Can we contact you by email?</span>
      <div>
        <%= radio_button_tag "reply", true,feedback.fetch(:reply,nil) == true.to_s %>
        <%= label_tag "reply_yes","Yes" %>
      </div>
      <div>
        <%= radio_button_tag "reply", false,feedback.fetch(:reply,nil) == false.to_s %>
        <%= label_tag "reply_no","No" %>
      </div>
    </div>

    <div>
      <%= label_tag "feedback_type" %>
      <%= select_tag "feedback_type",options_for_select(["Review","Bug Report"], feedback.fetch(:feedback_type,"")),prompt: "Choose One..." %>
    </div>

    <div>
      <%= label_tag "message" %>
      <%= text_area_tag "message",feedback.fetch(:message,nil),size: "27x7",class: "materialize-textarea" %>
    </div>
    <%= submit_tag "Send Feedback",class: "btn waves-effect waves-light" %>
  <% end %>
</div>

<br>
