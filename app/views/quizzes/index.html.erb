<% provide(:title,"Quizzes") %>

<div>
  <h1 class="blue-text center" style="font-weight:600">Quizzes</h1>
  <% quizzes.each do |quiz| %>
    <div id="<%= dom_id(quiz) %>">
      <br>
      <div class="card ">
        <div class="card-content blue">
          <div class="card-title">
              <strong><%= quiz.title %></strong>
              <span class="right">
                <%= link_to "🔎", quiz %>
                <% if quiz.user == current_user %>
                  <%= link_to "🖊️", edit_quiz_path(quiz),class: "link" %>
                  <%= link_to "🗑️",quiz,method: :delete,data: { confirm: "Are you sure?" } %>
                <% end %>
              </span>
          </div>
        </div>
        <div class="card-footer" style="padding:20px;">
          <p class="grey-text text-darken-2">
            Created by: <%= quiz.user.email %>
          </p>
          <p style="font-size:18px;">
            <%= truncate quiz.description,length: 75,separator: ' ' %>
          </p>

        </div>
      </div>
    </div>
  <% end %>
</div>
<br>
<br>
